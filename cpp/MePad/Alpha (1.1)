void estabilizacao() {
  Serial.print("Estabilização");
  Serial.println();
  delay(tmp);

  myservob1.write(ang_padrao);
  myservob2.write(ang_padrao);
  myservob3.write(ang_padrao);
  myservob4.write(ang_padrao);
  delay(tmp);

  Serial.print("Estado: Nominal");
  Serial.println();
  delay(tmp_intervalo);
  indice = 0; // Etapa Inicial
}
