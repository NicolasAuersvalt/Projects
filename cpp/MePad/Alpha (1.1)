#include <Servo.h>

// Base
Servo myservob1;
Servo myservob2;
Servo myservob3;
Servo myservob4;
Servo servo;

// Espátula
Servo myservoe1;
Servo myservoe2;
Servo myservoe3;
Servo myservoe4;

// Components
int potpin = A0;
int val;

// Time Values
int tmp = 15;
int tmp_1 = 1500;
int tmp_intervalo = 1000;

// Angles
int ang_lim_max = 170;
int ang_lim_min = 10;
int ang_sub = 100;
int ang_des = 80;
int ang_padrao = 90;
int indice = 0;

void setup() {
  Serial.begin(9600);

  // Pino da Base
  myservob1.attach(2);
  myservob2.attach(3);
  myservob3.attach(4);
  myservob4.attach(5);

  // Pino da Espátula
  myservoe1.attach(6);
  myservoe2.attach(7);
  myservoe3.attach(8);
  myservoe4.attach(9);
}

void loop() {

  // Centraliza a Base
  if (indice == 0) {
    myservob1.write(90);
    delay(tmp);
    myservob2.write(90);
    delay(tmp);
    myservob3.write(90);
    delay(tmp);
    myservob4.write(90);
    delay(tmp);

    // Centraliza a Espátula
    myservoe1.write(90);
    delay(tmp);
    myservoe2.write(90);
    delay(tmp);
    myservoe3.write(90);
    delay(tmp);
    myservoe4.write(90);
    delay(tmp_1);
    Serial.print("Motor 1");
    Serial.println();
    passo_1();
  }

  // Função Atual (Movimentação para Frente)

  else if (indice == 1) {
    Serial.print("Passo 2");
    Serial.println();
    passo_2();
  }
  else if (indice == 2) {
    Serial.print("Passo 3");
    Serial.println();
    passo_3();
  }
  else if (indice == 3) {
    Serial.print("Passo 4");
    Serial.println();
    passo_4();
  }
  else if (indice == 4) {
    Serial.print("Passo 5");
    Serial.println();
    passo_5();
  }
  else if (indice == 5) {
    Serial.print("Passo 6");
    Serial.println();
    passo_6();
  }
  else if (indice == 6) {
    Serial.print("Passo 7");
    Serial.println();
    passo_7();
  }
  else if (indice == 7) {
    Serial.print("Passo 8");
    Serial.println();
    passo_8();
  }
  else if (indice == 8) {
    Serial.print("Passo 9");
    Serial.println();
    passo_9();
  }
  else if (indice == 9) {
    Serial.print("Estabilizando...");
    Serial.println();
    estabilizacao();
  }
}

// 1° Passo

void passo_1() {

  // 1° Etapa

  // Espátula 1 Sobe
  Serial.print("Subida");
  Serial.println();
  delay(tmp);

  myservoe1.write(ang_sub);
  delay(tmp);

  Serial.print("Subida OK");
  Serial.println();
  delay(tmp_intervalo);

  // 2° Etapa

  // Base 1 Gira o Ângulo Mínimo
  Serial.print("Giro Mínimo");
  Serial.println();
  delay(tmp);

  myservob1.write(ang_lim_min);
  delay(tmp);

  Serial.print("Giro Mínimo OK");
  Serial.println();
  delay(tmp_intervalo);

  // 3° Etapa

  // Espátula 1 Desce
  Serial.print("Descida");
  Serial.println();
  delay(tmp);

  myservoe1.write(ang_des);
  delay(tmp);

  Serial.print("Descida OK");
  Serial.println();
  delay(tmp_intervalo);

  indice = 1; // Próximo Passo
}

// 2° Passo

void passo_2() {

  // 1° Etapa

  // Espátula 3 Sobe
  Serial.print("Subida");
  Serial.println();
  delay(tmp);

  myservoe3.write(ang_sub);
  delay(tmp);

  Serial.print("Subida OK");
  Serial.println();
  delay(tmp_intervalo);

  // 2° Etapa

  Serial.print("Giro Máximo");
  Serial.println();
  delay(tmp);

  // Base 1 Gira o Ângulo Máximo
  myservob3.write(ang_lim_max);
  delay(tmp);

  Serial.print("Giro Máximo OK");
  Serial.println();
  delay(tmp_intervalo);

  // 3° Etapa

  // Espátula 3 Desce
  Serial.print("Descida");
  Serial.println();
  delay(tmp);

  // Espátula 3 Sobe
  myservoe3.write(ang_des);
  delay(tmp);

  Serial.print("Descida OK");
  Serial.println();
  delay(tmp_intervalo);

  indice = 2; //Próximo Passo
}

