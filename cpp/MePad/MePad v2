#include <Servo.h>

// Base
Servo myservob1;
Servo myservob2;
Servo myservob3;
Servo myservob4;
Servo servo;

// Espátula
Servo myservoe1;
Servo myservoe2;
Servo myservoe3;
Servo myservoe4;

int potpin = A0;
int val;
int tmp = 15;
int tmp_1 = 1500;
int tmp_intervalo = 1000;
int ang_lim_max = 170;
int ang_lim_min = 10;
int ang_sub = 100;
int ang_des = 80;
int ang_padrao = 90;
int indice = 0;

void setup() {
  Serial.begin(9600);
  
  // Pino à Base
  myservob1.attach(2);
  myservob2.attach(3);
  myservob3.attach(4);
  myservob4.attach(5);

  // Pino à Espátula
  myservoe1.attach(6);
  myservoe2.attach(7);
  myservoe3.attach(8);
  myservoe4.attach(9);
}

void loop() {
  
  
  if (indice == 0){
    // Centraliza a Base
    myservob1.write(90);
    delay(tmp);
    myservob2.write(90);
    delay(tmp);
    myservob3.write(90);
    delay(tmp);
    myservob4.write(90);
    delay(tmp);
  
  
    // Centraliza a Espátula
    myservoe1.write(90);
    delay(tmp);
    myservoe2.write(90);
    delay(tmp);
    myservoe3.write(90);
    delay(tmp);
    myservoe4.write(90);
    delay(tmp_1);
    Serial.print("Motor 1");
    Serial.println();
    motor_1();
    
  }
  else if (indice == 1){
    Serial.print("Motor 2");
    Serial.println();
    motor_2();
    
  }
  else if (indice == 2){
    Serial.print("Motor 3");
    Serial.println();
    motor_3();
    
  }
  else if (indice == 3){
    Serial.print("Motor 4");
    Serial.println();
    motor_4();
    
  }
  else if (indice == 4){
    Serial.print("Estabilizando...");
    Serial.println();
    estabilizacao();
       
  }
}

  void motor_1(){
    // Espátula sobe
    Serial.print("Subida");
    Serial.println();
    delay(tmp);
    myservoe1.write(ang_sub);  
    delay(tmp);
    Serial.print("Subida OK");
    Serial.println();
    delay(tmp_intervalo);
    
    // Base Gira
    Serial.print("Giro da Base");
    Serial.println();
    delay(tmp);
    myservob1.write(ang_lim_max);
    delay(tmp);
    Serial.print("Giro da Base OK");
    Serial.println();
    delay(tmp_intervalo);
  
    // Espátula Desce
    Serial.print("Descida");
    Serial.println();
    delay(tmp);
    myservoe1.write(ang_padrao);  
    delay(tmp);
    Serial.print("Descida OK");
    Serial.println();
    delay(tmp_intervalo);
    indice = 1;
  }
  
  void motor_2(){
    // Espátula sobe
    Serial.print("Subida");
    Serial.println();
    delay(tmp);
    myservoe2.write(ang_sub);  
    delay(tmp);
    Serial.print("Subida OK");
    Serial.println();
    delay(tmp_intervalo);
    
    // Base Gira
    Serial.print("Giro da Base");
    Serial.println();
    delay(tmp);
    myservob2.write(ang_lim_max);
    delay(tmp);
    Serial.print("Giro da Base OK");
    Serial.println();
    delay(tmp_intervalo);
  
    // Espátula Desce
    Serial.print("Descida");
    Serial.println();
    delay(tmp);
    myservoe2.write(ang_padrao);  
    delay(tmp);
    Serial.print("Descida OK");
    Serial.println();
    delay(tmp_intervalo);
    indice = 2;
  }
  
  void motor_3(){
    // Espátula sobe
    Serial.print("Subida");
    Serial.println();
    delay(tmp);
    myservoe3.write(ang_sub);  
    delay(tmp);
    Serial.print("Subida OK");
    Serial.println();
    delay(tmp_intervalo);
    
    // Base Gira
    Serial.print("Giro da Base");
    Serial.println();
    delay(tmp);
    myservob3.write(ang_lim_max);
    delay(tmp);
    Serial.print("Giro da Base OK");
    Serial.println();
    delay(tmp_intervalo);
  
    // Espátula Desce
    Serial.print("Descida");
    Serial.println();
    delay(tmp);
    myservoe3.write(ang_padrao);  
    delay(tmp);
    Serial.print("Descida OK");
    Serial.println();
    delay(tmp_intervalo);
    indice = 3;
  }
  
  void motor_4(){
    // Espátula sobe
    Serial.print("Subida");
    Serial.println();
    delay(tmp);
    myservoe4.write(ang_sub);  
    delay(tmp);
    Serial.print("Subida OK");
    Serial.println();
    delay(tmp_intervalo);
    
    // Base Gira
    Serial.print("Giro da Base");
    Serial.println();
    delay(tmp);
    myservob4.write(ang_lim_max);
    delay(tmp);
    Serial.print("Giro da Base OK");
    Serial.println();
    delay(tmp_intervalo);
  
    // Espátula Desce
    Serial.print("Descida");
    Serial.println();
    delay(tmp);
    myservoe4.write(ang_padrao);  
    delay(tmp);
    Serial.print("Descida OK");
    Serial.println();
    delay(tmp_intervalo);    
    indice = 4;
  }
  
  void estabilizacao(){
    Serial.print("Estabilização");
    Serial.println();
    delay(tmp);
    myservob1.write(ang_padrao);
    myservob2.write(ang_padrao);
    myservob3.write(ang_padrao);
    myservob4.write(ang_padrao);  
    delay(tmp);
    Serial.print("Estado: Nominal");
    Serial.println();
    delay(tmp_intervalo);
    indice = 0;
  }
  
