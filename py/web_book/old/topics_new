    <!--Cada item exibirá o Timestamp e o conteúdo-->
    <!-- Timestamp, temos o date_added-->


    <!-- Geramos um url adequado consultando learning_logs.urls com o nome topic-->
    <!-- Esse padrão exige um parâmetro topic_id, por exemplo-->
    <!-- topic/1/ topic/2/-->
    <li><a href="{% url 'learning_logs:topic' topic.id %}">{{topic}}</a></li>

    <!-- diz a Django o que fazer se não tiver nenhum item na lista-->
        {%empty%}
    <p>Nada adicionado ainda</p>

    {%endfor%}
</ul>

